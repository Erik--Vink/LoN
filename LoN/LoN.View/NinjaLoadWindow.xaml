<Window x:Class="LoN.View.NinjaLoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NinjaLoadWindow" Height="300" Width="130"
        DataContext="{Binding Shop, Source={StaticResource Locator}}"
        Name="Load"
        ResizeMode="NoResize">
    <StackPanel Orientation="Horizontal">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="230"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <DataGrid ItemsSource="{Binding AllNinjas}" AutoGenerateColumns="False" Width="125" Height="230" SelectedItem="{Binding SelectedNinjaViewModel}"
                      Grid.Column="0" Grid.Row="0" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Ninja's" Binding="{Binding NinjaId}" Width="*" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button IsEnabled="{Binding IsLoadableSelected}" Command="{Binding LoadNinja}" Content="Load" Grid.Column="0" Grid.Row="1" />
        </Grid>
    </StackPanel>
</Window>
